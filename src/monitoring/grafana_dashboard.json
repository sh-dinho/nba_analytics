{
  "title": "NBA Analytics Pipeline Dashboard",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Total Pipeline Runs",
      "targets": [
        { "expr": "nba_pipeline_runs_total" }
      ]
    },
    {
      "type": "stat",
      "title": "Pipeline Failures",
      "targets": [
        { "expr": "nba_pipeline_failures_total" }
      ]
    },
    {
      "type": "stat",
      "title": "Pipeline Success Rate",
      "targets": [
        {
          "expr": "1 - (nba_pipeline_failures_total / nba_pipeline_runs_total)"
        }
      ],
      "unit": "percent"
    },
    {
      "type": "graph",
      "title": "Pipeline Duration (seconds)",
      "targets": [
        { "expr": "rate(nba_pipeline_duration_seconds_sum[5m])" }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "seconds"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Model Training Duration (seconds)",
      "targets": [
        { "expr": "rate(nba_model_training_duration_seconds_sum[5m])" }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "seconds"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Current Model Version",
      "targets": [
        { "expr": "nba_model_version" }
      ]
    },
    {
      "type": "stat",
      "title": "Drifted Features Detected",
      "targets": [
        { "expr": "nba_drift_features_detected" }
      ]
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s","10s","30s","1m","5m","15m","30m","1h","2h","1d"]
  }
}
